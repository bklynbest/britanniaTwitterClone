<div class= 'column is-half'>
  <% if user_signed_in? %>
  <article class= 'media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
      
    </figure>
    <div class="media-content">
      <%= render 'breets/form' %>
    </div>
  </article>
  <% end %>

<% @breets.each do | breet | %>
  <div class="box">
    <article class="media">
  	  <div class="media-left">
  			<figure class="image is-64x64">
  				<%= gravatar_image_tag(breet.user.email, size: 64, alt: breet.user.name) %>
  			</figure>
  		</div>
  		<div class= 'media-content'>
  		  <div class= "content">
  		    <strong><%=breet.user.name%></strong><br />
  		    <small><%=breet.user.username%></small><br />
  		    <p><%= breet.breet %></p>
  		  </div>
  		  <% if user_signed_in? && current_user.id == breet.user_id %>
  		  <nav class="level">
  		    <div class= "level-left is-mobile">
  		      <%= link_to breet, class: "level-item" do %>
  		        <span class= "icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  		      <% end %>
  		      <%= link_to edit_breet_path(breet), class:'level-item' do %>
  		        <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  		      <% end %>
  		      <%= link_to breet, method: :delete, data: {confirm: 'Are you sure you want to delete this Breet?'} do %>
  		        <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  		      <% end %>
  		    </div>
  		  </nav>
  		  <% end %>
  		</div>
  	</article>
  </div>
  <% end %>
</div>

