<!DOCTYPE html>
<html>
<head>
  <title>Britter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <div class= 'notification is-primary global-notification'>
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class= 'notification is-danager global-notification'>
       <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  <nav class= 'navbar is-info'>
    <div class= 'navbar-brand'>
      <%= link_to root_path, class: 'navbar-item' do %>
      <h1 class='title is-5'>Britter</h1>
  <% end %>
      <div class="navbar-burger">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
      <div id='navbarExample' class='navbar-menu'>
        <div class='navbar-end'>
          <div class='navbar-item'>
            <div class='field is-grouped'>
              <p class='control'>
                <% if user_signed_in? %>
                <%= link_to 'New Breet', new_breet_path, class: 'button is-info is-inverted' %>
                <%= link_to current_user.name, edit_user_registration_path, class: 'button is-info' %>
                <%= link_to 'Sign Out', logout_path, data: {confirm: 'Are you sure'}, class: 'button is-danger is-inverted' %>
              </p>
                <% else %>
              <p class="control"><%= link_to 'Sign Up', new_user_registration_path, class:'button is-info is-inverted'%></p>
              <p class= "control">
                <%= link_to 'Sign In', login_path, class:'control button is-info is-inverted'%>
              </p>
              <% end %>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </nav>
<%= yield %>

<br /><br /><br />
<center>&copy Britannia Dev</center>

</body>
</html>
